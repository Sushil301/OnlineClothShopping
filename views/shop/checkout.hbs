
<div class="wrapper">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <h1>Checkout</h1>
        <h4>Your Total: ${{ch_total}}</h4>
        <div id="charge-error" class="alert alert-danger {{#if noError}}hidden{{/if}}">
            {{errMsg}}
        </div>
        <form action="/checkout" method="post" id="checkout-form">
            <div class="row">
                <div class="col-xs-12">
                    <div class="form-wrapper">
                        <label for="name">Name</label>
                        <input type="text" id="name" style="width: 250px;" class="form-control" required name="name">
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="form-wrapper">
                        <label for="address">Address</label>
                        <input type="text" id="address" style="width: 250px;" class="form-control" required name="address">
                    </div>
                </div>
                <hr>
                <div class="col-xs-12">
                    <div class="form-wrapper">
                        <label for="card-name">Card Holder Name</label>
                        <input type="text" id="card-name" style="width: 250px;" class="form-control" required>
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="form-wrapper">
                        <label for="card-number">Credit Card Number</label>
                        <input type="text" id="card-number" style="width: 250px;" class="form-control" required>
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="row">
                        <div class="col-xs-6">
                            <div class="form-wrapper">
                                <label for="card-expiry-month">Expiration Month</label>
                                <input type="text" id="card-expiry-month" style="width: 80px;" class="form-control" required>
                            </div>
                        </div>
                        <div class="col-xs-6">
                            <div class="form-wrapper">
                                <label for="card-expiry-year" style="margin-left:50px;">Expiration Year</label>
                                <input type="text" id="card-expiry-year" style="width: 80px;margin-left: 50px;" class="form-control" required>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="form-wrapper">
                        <label for="card-cvc">CVC</label>
                        <input type="text" id="card-cvc" class="form-control" required>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-success">Buy now</button>
        </form>
    </div>
</div>

<script type="text/javascript" src="https://js.stripe.com/v2/"></script>
<script type="text/javascript" src="javascripts/checkout.js"></script>
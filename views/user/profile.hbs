<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <h1>User Profile</h1>
        {{log userprofile}}
        {{#each userprofile}}

        <form action="/user/editProfile" method="post">
            <label for="first_name">First name</label>
            <input type="text" id="firstName" value="{{this.fname}}" name="firstName" style="width: 300px;" class="form-control"><br>

            <label for="last_name">Last name</label>
            <input type="text" id="lastName" value="{{this.lname}}" name="lastName" style="width: 300px;"  class="form-control" ><br>

            <label for="email">Email</label>
            <input type="email" id="email" value="{{this.email}}" name="email" style="width: 300px;"  class="form-control" readonly><br>

            <input type="hidden" name="_id" value="{{this._id}}">
            <input type="hidden" name="_csrf" value="{{ csrfToken }}">

            <input type="submit" value="Update Profile">
        </form>
        {{/each}}

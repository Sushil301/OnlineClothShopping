        <!--Breadcumb area start here-->
        <section class="breadcumb-area">
            <div class="container">
                <div class="row">
                    
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="breadcum-nav">
                            <h4>recommended Product </h4>
                            <ul>
                                <li><a href="/">home</a></li>
                                <li><a href="#">view Produt</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        
        <section class="products-page section">
            <div class="container">
                <div class="row">
                    <div class="col-md-3 col-sm-12">
                        <div class="sidebar">
                            <div class="widget">
                                <div class="heading">
                                    <h4>Categories</h4>
                                </div>
                                <div class="categories-list">
                                    <ul>
                                        {{#each categorydetails }}
                                        <li><a href="/admin/categorywiseproduct/{{ this.categoryName }}">{{ this.categoryName }}</a></li>
                                        {{/each}}
                                    </ul>
                                </div>
                            </div>
                            <div class="widget">
                                <div class="heading">
                                    <h4>Size</h4>
                                </div>
                                <div class="pro-size">
                                    <ul class="list-inline"  >
                                        <li><a href="/admin/sizesort/m"><span>m</span></li></a>
                                        <li><a href="/admin/sizesort/s"><span>s</span></li></a>
                                        <li><a href="/admin/sizesort/l"><span>l</span></li></a>
                                        <li><a href="/admin/sizesort/xl"><span>xl</span></li></a>
                                        <li><a href="/admin/sizesort/xxl"><span>xxl</span></li></a>
                                    </ul>
                                </div>
                            </div>
                            
                        </div>
                    </div>
                    
                    <div class="col-md-9 col-sm-12 pd-0">
                        <div class="col-sm-12">
                            <div class="pro-filter">
                                <p>Showing 1- 11 of 120 products</p>
                                <div class="gr-li">
                                    <ul class="list-inline">
                                        <li><a href="#" id="gridview"><i class="fa fa-th"></i></a></li>
                                        <li><a href="#" id="listview"><i class="fa fa-list"></i></a></li>
                                    </ul>
                                    
                                </div>
                            </div>
                            <div class="pro-file">
                                <div class="filtersd">  
                                    <form id="tableForm" action="/admin/getSortData" method="POST">
                                        <select class="selectpicker" data-style="btn-info" name="selectSortpicker">
                                            
                                                <option value="sbli"> SORT BY LATEST ITEM</option>
                                                <option value="lth">Price Low to High</option>
                                                <option value="htl">Price High to Low</option>
                                            
                                        </select>
                                        <input type="submit" value="check" />
                                    </form>
                                </div>
                            </div>
                        </div>

                        <div class="col-sm-12">
                            <div id="products" class="row">
                                <br>
                                {{# each list}}
                                <div class="item col-md-4 col-sm-6 col-xs-12">
                                    <div class="product-list">
                                        <figure>
                                            <span class="offr">20%</span>
                                            <img style="height: 300px;width: 350px" src="/images/productImage/{{ this.productImage }}" alt="{{ this.productImage }}"/>
                                            <ul>
                                                <li><a href="/admin/delete/{{ this._id }}"><i class="fa fa-trash" aria-hidden="true"></i></a></li>
                                               
                                                <li><a href="/admin/update/{{ this._id }}"><i class="fa fa-edit"></i></a></li>
                                            </ul>
                                        </figure>
                                        <div class="content">
                                            <h4><a href="#">{{ this.productName }}</a> <span>{{ this.price }}</span></h4>
                                            <p class="grid-p">{{ this.producttype }}</p>
                                            <p class="list-p">{{ this.description }}</p>
                                        </div>
                                    </div>
                                </div>
                                {{/each}}
                             
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="paginations">
                                <ul>
                                    <li><a href="#"><span>Pervious</span></a></li>
                                    <li><a href="#" class="active">1</a></li>
                                    <li><a href="#">2</a></li>
                                    <li><a href="#">3</a></li>
                                    <li><a href="#">4</a></li>
                                    <li><a href="#">5</a></li>
                                    <li><a href="#">.....</a></li>
                                    <li><a href="#">10</a></li>
                                    <li><a href="#"><span>next</span></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

            <select name="discountCategoryName" class="form-control">
                 {{#each categoryDeatils }}
                    <option value="{{ this._id }}">{{ this.categoryName }}</option>
                 {{/each}}
            </select>
        </td>
        </tr>
        <tr><td><br></td></tr>
         <tr>
        <th>Flat in % : </th>
        <td>
          <input type="number" name="flatprice" class="form-control" min="0"/>
